<h2>🌱 Crée ta plante</h2>

<%= form_with model: @plant, url: plant_path, method: :post do |form| %>
  <div>
    <%= form.label :name, "Nom de ta plante" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :personality, "Personnalité" %><br>
    <%= form.select :personality, options_for_select([
      ["🎭 Drama Queen", "drama"],
      ["😏 Ironique", "ironic"],
      ["🐍 Agressive", "aggressive"],
      ["🌧️ Mélancolique", "melancholic"],
      ["🌈 Gentille", "gentle"]
    ]) %>
  </div>

  <%= form.submit "Créer ma plante" %>
<% end %>

