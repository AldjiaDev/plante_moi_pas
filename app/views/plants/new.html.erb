<div class="container-gap">
  <div class="nes-container with-title is-rounded">
    <p class="title">🌱 Crée ta plante</p>

    <%= form_with model: @plant, url: plant_path, method: :post do |form| %>
      <div class="nes-field mb-4">
        <label for="plant_name">Nom de ta plante</label>
        <%= form.text_field :name, class: "nes-input", id: "plant_name" %>
      </div>

      <div class="nes-field mb-4">
        <label for="plant_personality">Personnalité</label>
        <%= form.select :personality, options_for_select([
          ["🎭 Drama Queen", "drama"],
          ["😏 Ironique", "ironic"],
          ["🐍 Agressive", "aggressive"],
          ["🌧️ Mélancolique", "melancholic"],
          ["🌈 Gentille", "gentle"]
        ]), {}, class: "nes-select", id: "plant_personality" %>
      </div>

      <div class="text-center">
        <%= form.submit "Créer ma plante", class: "nes-btn is-success" %>
      </div>
    <% end %>
  </div>
</div>
